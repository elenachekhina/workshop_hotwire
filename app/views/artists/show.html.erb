<div class="artist-header">
  <div class="artist-image">
    <% if artist.cover.attached? %>
      <%= image_tag artist.cover %>
    <% end %>
  </div>
  <div class="artist-info">
    <div class="flex items-center">
      <h1 class="text-header-2"><%= artist.name %></h1>
    </div>
    <div>
      <% artist.tags.each do |tag| %>
        <span class="meta"><%= tag %></span>
      <% end %>
    </div>
  </div>
</div>

<hr class="my-4">

<h2 class="mt-4 text-header-2">Popular</h2>
<ul class="tracks mt-2">
  <%= turbo_frame_tag "tracks" do %>
    <%= render tracks, enqueueble: true %>
  <% end %>
  <%= turbo_frame_tag "tracks_page_1" do %>
    <li class="track">
      <span class="track--number"></span>
      <%= link_to 'See all', artist_tracks_path(artist, page: 1), class: "text-secondary hover:text-primary transition-colors" %>
    </li>
  <% end %>
</ul>

<hr class="my-4"/>

<%= render partial: "discography", locals: {artist:, albums:} %>
